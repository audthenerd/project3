<% if customer_signed_in? %>
	<h1><%= @customer.name %>: Your Reservations</h1>
	<%= month_calendar(attribute: :reservation_date, events: @booked, restaurant: @restaurant) do |date, events, restaurant| %>

  <%= date.to_formatted_s(:short) %>

	  <% events.each do |event| %>
	    <div>
	    	<%= link_to 'Your reservation at:' + event.restaurant.name, customer_reservation_path(current_customer.id, event.id) %><br>
	      <%= event.reservation_time %>
	    </div>
	  <% end %>

	<% end %>


	<% end %>



