<h1>Make a reservation</h1>
<%= form_with scope: @reservation, local: true do |form| %>

	<p>
		<%= form.label :reservation_date %><br>
		<%= form.text_field :reservation_date %>
	</p>

	<p>
		<%= form.label :reservation_time %><br>
		<%= form.text_area :reservation_time %>
	</p>

	<p>
		<%= form.label :seats %><br>
		<%= form.number_field :seats, value: 1, min: 1, max: 5 %>
	</p>

	<%= form.hidden_field :customer_id, value: @customer.id %>

	<p>
		<%= form.submit %>
	</p>
<% end %>

<%= link_to 'Back', customers_path %>