<div class = "container">

 <div class="row">
        <% if customer_signed_in? %>
        <h1>Search for your favourite restaurant</h1>



<%= form_tag(restaurants_path, method: :get) do %>
  <%= text_field_tag :name, nil, placeholder: "Search for restaurants by Name or Category", id: "search-rest" %>
  <%= submit_tag 'Search' %>
<% end %>



            <% @restaurants.each do |restaurant| %>
            <div class="card col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <br/>
                <%= cl_image_tag(restaurant.image_url,  class: "card-img-top") %>
                <div class="card-body">
                    <h5 class="card-title"><%= restaurant.name %></h5>
                    <p class="card-text">Date created: <%= restaurant.created_at.to_date %></p>
                    <% # login is userrest %>
                        <p class="card-text inline"><%= link_to 'Show', restaurant_path(restaurant) %></p>
                        <p class="card-text inline"><%= link_to 'Edit', edit_restaurant_path(restaurant) %></p>
                        <p class="card-text inline"><%= link_to 'Destroy', restaurant_path(restaurant),
                            method: :delete,
                            data: { confirm: 'Are you sure?' } %></p>
                    <% # end %>
                </div>
            </div>
            <% end %>
        <% end %>
    </div>

</div>

