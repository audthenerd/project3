<div class="container">

    <div class="row">
        <h1>Edit Restaurant</h1>
    </div>

    <div class="row">
        <%= form_with scope: :restaurant, model: @restaurant, local: true do |form| %>
            <div>
                <%= form.label :name %><br>
                <%= form.text_field :name, class:"form-control" %>
            </div>

            <div>
                <%= form.label :image_url %><br>
                <%= form.file_field :image_url, class:"form-control" %>
            </div>

            <div>
                <%= form.label :location %><br>
                <%= form.text_field :location, {class: 'form-control'} %>
            </div>

            <div>
                <%= form.hidden_field :lat, {class: 'form-control'}%>
            </div>

            <div>
                <%= form.hidden_field :long, {class: 'form-control'} %>
            </div>    


            <div>
                <%= form.submit class:'btn btn-primary'%>
            </div>
        <% end %>
    </div>
    <br>
    <div class="row">
        <%= link_to 'Back', restaurants_path, class:'btn btn-primary' %>
    </div>

</div>