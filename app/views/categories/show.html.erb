<div class="container">
<!--
**************************
If userrest is signed in
************************** -->
<% if userrest_signed_in? %>
	<h2>Your restaurants listed under <%= @category.name %></h2>
<% else %>
	<h1>Select from our range of <%= @category.name %> restaurants</h1>
<% end %>

<div class = "container">

<% if @restaurants.exists? %>

<div class='row'>
<% @restaurants.each do |restaurant| %>
		        <div class="card coverimg">
		            <br/>
			            <%= cl_image_tag(restaurant.image_url[0],  class: "card-img-top") %>
		            <div class="card-body">
		                    <h5 class="card-text inline"><%= link_to restaurant.name, restaurant_path(restaurant) %></h5>
		                    <% if userrest_signed_in? %>
			                    <p class="card-text inline"><%= link_to 'Edit Restaurant Profile', edit_restaurant_path(restaurant) %></p>
			                    <p class="card-text inline"><%= link_to 'Delete Restaurant', restaurant_path(restaurant),
			                        method: :delete,
			                        data: { confirm: 'Are you sure?' } %></p>
			                    <p class="card-text">Date created: <%= restaurant.created_at.to_date %></p>
		                 		<% else %>
		                 			<p class="card-text inline"><%= link_to 'View Menu', restaurant_menuitems_path(restaurant) %></p>
		                 		<% end %>
		            </div>
		        </div>
	        	<% end %></div>
<% else %>
No restaurants listed under this category!
<% end %>
</div>
<div>
<%= link_to 'Back', restaurants_path %>
</div>
</div>